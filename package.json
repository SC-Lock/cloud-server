{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && node ./bin/app.js",
        "build": "npm run copy && tsc && yarn prisma migrate deploy",
        "copy": "npm run copy-views && npm run copy-public",
        "copy-views": "copyfiles -u 1 src/views/* bin",
        "copy-public": "copyfiles -u 1 src/public/**/* bin",
        "watch": "nodemon ./bin/app.js",
        "watch-ts": "tsc --watch"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^4.6.1",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "mqtt": "^4.3.7",
        "sqlite3": "^5.1.2",
        "yarn": "^1.22.19"
    },
    "devDependencies": {
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.9",
        "@types/sqlite3": "^3.1.8",
        "copyfiles": "^2.4.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.0",
        "prisma": "^4.6.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    },
    "prisma": {
        "schema": "./src/prisma/schema.prisma",
        "seed": "ts-node ./src/prisma/seeders/seed.ts"
    }
}

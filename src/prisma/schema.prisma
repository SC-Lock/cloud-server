generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Door {
    id         Int       @id @default(autoincrement())
    unlockCode String
    isLocked   Boolean
    lockAt     DateTime
    unlockAt   DateTime
    doorLogs   DoorLog[]
}

model DoorLog {
    id          Int      @id @default(autoincrement())
    door        Door     @relation(fields: [doorId], references: [id])
    doorId      Int
    isLocked    Boolean
    isAutomatic Boolean
    createdAt   DateTime @default(now())
}

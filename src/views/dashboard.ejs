<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
<!--    <link rel="stylesheet" type="text/css" href="/css/reset.css">-->
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.5.1/dist/chart.min.js" integrity="sha256-bC3LCZCwKeehY6T4fFi9VfOU0gztUa+S4cnkIhVPZ5E=" crossorigin="anonymous"></script>
    <script type="module" src="/js/dashboard.js"></script>
    <title>Dashboard</title>
</head>
<body>
<h1>Dashboard: door <%= door.id %></h1>

<article>
    <p>locked: <%= door.isLocked %></p>

    <p>closed: <%= door.isClosed %></p>

    <p>lock at: <%= door.lockAt %></p>

    <p>unlock at: <%= door.unlockAt %></p>
</article>

<table>
    <caption>Most recent updates</caption>
    <thead>
        <tr>
            <th>number</th>
            <th>locked</th>
            <th>automatic</th>
            <th>updated</th>
        </tr>
    </thead>
    <tbody>
        <% for (const doorLog of doorLogs.reverse().slice(0, 10)) { %>
            <tr>
                <td><%= doorLog.id %></td>
                <td><%= doorLog.isLocked %></td>
                <td><%= doorLog.isAutomatic %></td>
                <td><%= doorLog.createdAt %></td>
            </tr>
        <% } %>
    </tbody>
</table>

<div>
    <canvas id="time-locked-chart"></canvas>
</div>
</body>
</html>
